@model VendasWeb.Models.ViewsModels.VendedorFormViewModel

@{
    ViewData["Title"] = "Editar";
}

<h2>@ViewData["Title"]</h2>

<h4>Vendedor</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Vendedor.Id" />
            <label asp-for="Vendedor.Nome" class="control-label"></label>
            <input asp-for="Vendedor.Nome" class="form-control" />
            <span asp-validation-for="Vendedor.Nome" class="text-danger"></span>


            <div class="form-group">
                <label asp-for="Vendedor.Email" class="control-label"></label>
                <input asp-for="Vendedor.Email" class="form-control" />
                <span asp-validation-for="Vendedor.Email" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Vendedor.DataNascimeto" class="control-label"></label>
                <input asp-for="Vendedor.DataNascimeto" class="form-control" />
                <span asp-validation-for="Vendedor.DataNascimeto" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Vendedor.SalarioBase" class="control-label"></label>
                <input asp-for="Vendedor.SalarioBase" class="form-control" />
                <span asp-validation-for="Vendedor.SalarioBase" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="Vendedor.DepartamentoId" class="control-label"></label>
                <select asp-for="Vendedor.DepartamentoId" asp-items="@(new SelectList(Model.Departamentos,"Id",
"Nome"))" class="form-control"></select>
            </div>



            <div class="form-group">
                <input type="submit" value="Save" class="btn-primary" />
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 